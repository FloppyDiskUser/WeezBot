                                                </Grid>
                                                <StackPanel Orientation="Horizontal">
                                                    <Label Content="CP:" FontSize="18" Height="30" Width="75" Foreground="Gray" />
                                                    <Label Content="{Binding CP}" FontSize="18" Width="150" Height="30" Foreground="Gray" HorizontalContentAlignment="Left" HorizontalAlignment="Center"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal">
                                                    <Label Content="IV:" FontSize="18" Height="30" Width="75" Foreground="Gray" />
                                                    <Label Content="{Binding IV}" FontSize="18" Width="150" Height="30" Foreground="Gray" HorizontalContentAlignment="Left" HorizontalAlignment="Center"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal">
                                                    <Label Content="Move1:"  FontSize="18" Height="30" Width="75"  Foreground="Gray" />
                                                    <Label Content="{Binding Move1}" FontSize="18" Width="150" Height="30" Foreground="Gray" HorizontalContentAlignment="Left" HorizontalAlignment="Center"/>
                                                    </StackPanel>
                                                <StackPanel Orientation="Horizontal">
                                                    <Label Content="Move2:"  FontSize="18" Height="30" Width="75" Foreground="Gray"/>
                                                    <Label Content="{Binding Move2}" FontSize="18"  Width="150" Height="30" Foreground="Gray" HorizontalContentAlignment="Left" HorizontalAlignment="Center"/>
                                                </StackPanel>
                                                <Label Visibility="Collapsed" Name="id" Content="{Binding id}" />
                                            </StackPanel>
                                        </materialDesign:Card>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </ScrollViewer>
                    </StackPanel>
                </TabItem>
            </TabControl>
        </DockPanel>
        <StackPanel x:Name="Loading" Visibility="Collapsed" VerticalAlignment="Center" Margin="0,0,0,60" HorizontalAlignment="Center">
            <Label x:Name="loadingMessages" Content="Loading" FontSize="70" Margin="0,40,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Segoe ui light" />
            <Controls:ProgressRing Width="100" Height="100" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </StackPanel>
        <Grid x:Name="timeElapsed" Visibility="Collapsed">
            <Label Content="Time is Up!" FontFamily="Segoe Ui light" FontSize="65" Margin="0,0,0,100" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" Height="100" Margin="0,100,0,0" Width="950" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Content="Go To Configs" Click="KeepThisVersion" FontFamily="Segoe Ui light" Width="450" Height="100" FontSize="65" Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Button Content="Start it again?" Click="startitagain_Click" FontFamily="Segoe Ui light" Width="450" Height="100" FontSize="65" Margin="50,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
