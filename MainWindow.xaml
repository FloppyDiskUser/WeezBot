                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Style="{StaticResource LineItemPanel}">
                                            <Label Style="{StaticResource LineItemLabel}" Content="Dump Pokemon Stats" ToolTip="QED." />
