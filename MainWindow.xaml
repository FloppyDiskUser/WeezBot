                        <StackPanel HorizontalAlignment="Left" Height="260" Width="725" VerticalAlignment="Center" Margin="5,10,0,50">
                            <Canvas>
                                <Line X1='0' X2='700' Y1="0" Y2="0" Stroke="Gray" StrokeThickness="2"></Line>
                            </Canvas>
                            <Label x:Name="Command8" FontSize="12" Foreground="Gray" Content=""/>
                            <Label x:Name="Command7" FontSize="12" Foreground="Gray" Content=""/>
                            <Label x:Name="Command6" FontSize="12" Foreground="Gray" Content=""/>
                            <Label x:Name="Command5" FontSize="12" Foreground="Gray" Content=""/>
                            <Label x:Name="Command4" FontSize="12" Foreground="Gray" Content=""/>
                            <Label x:Name="Command3" FontSize="12" Foreground="Gray" Content=""/>
                            <Label x:Name="Command2" FontSize="12" Foreground="Gray" Content=""/>
                            <Label x:Name="Command1" FontSize="12" Foreground="Gray" Content=""/>
                            <Canvas>
                                <Line X1='0' X2='700' Y1="0" Y2="0" Stroke="Gray" StrokeThickness="2"></Line></Canvas>
                        </StackPanel>
                        <materialDesign:Card Width="550" Height="360" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,0,0">
                            <StackPanel>
                                <Label x:Name="locationUnder" Width="500" Content="{Binding MapLabel}" Foreground="Gray" FontFamily="Segoe Ui Light" FontSize="15"/>
                                <m:Map Focusable="False" x:Name="LoadingMap" Height="300"  Width="540" Center="34.0091339,-118.4992379" HorizontalAlignment="Center" VerticalAlignment="Center" ZoomLevel="16" Margin="0,0,0,0">
                                    <Image x:Name="playerSymbol" Width="50" Height="50"/>
                                </m:Map>
                                
                            </StackPanel>
                        </materialDesign:Card>
                        <StackPanel Orientation="Horizontal" Width="1300" Height="250" Margin="5,0,0,0" VerticalAlignment="Bottom" HorizontalAlignment="Left">
