                                <Label x:Name="localImage_label" FontSize="14" Content="Loading" HorizontalAlignment="Center" HorizontalContentAlignment="Center" />
                                <Image x:Name="localImage" Source="img/Pokemon/001.png" Height="130" />
                                
                            </StackPanel>
                        </materialDesign:Card>
                        <materialDesign:Card Width="650" Height="150" HorizontalAlignment="Left" Margin="80,5,0,0" Background="Transparent">
                            <Grid>
                                <StackPanel HorizontalAlignment="Center" Margin="100,0,0,0" Width="350" VerticalAlignment="Top">
                                    <Label  HorizontalAlignment="Left" FontSize="35" Height="70" VerticalAlignment="Top" Foreground="Gray" x:Name="Nickname" />
                                    <Label  x:Name="Stardust"/>
                                    <Label x:Name="PokeballsTotal_Label" Content="Total Pokeballs: " />

