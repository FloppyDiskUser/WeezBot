                                <DataTemplate DataType="x:Type local:latestAction">
                                    <StackPanel Visibility="{Binding seeable}" Background="Transparent" VerticalAlignment="Center" Width="150" Height="200" Margin="10,0,0,0" HorizontalAlignment="Center">
                                        <TextBlock TextWrapping="Wrap" Height="80" Foreground="Green" Width="150" TextAlignment="Center" Text="{Binding latestAction_label}"  FontSize="20" HorizontalAlignment="Center"/>
