                                                <Grid>
                                                    <Label FontSize="20" Panel.ZIndex="3" Content="{Binding Bonbon}" Foreground="Black" Height="60" Width="60" VerticalAlignment="Top" VerticalContentAlignment="Center" HorizontalAlignment="Right" Margin="0,10,10,0" HorizontalContentAlignment="Center">
