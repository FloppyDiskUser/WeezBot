                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Style="{StaticResource LineItemPanel}">
                                            <Label Style="{StaticResource LineItemLabel}" Content="Use GPX Pathing" ToolTip="Check this box to supply a GPX file for pathing the bot and enable the feature." />
                                            <Controls:ToggleSwitch OffLabel="False" OnLabel="True" IsChecked="{Binding Settings.UseGpxPathing}"/>
